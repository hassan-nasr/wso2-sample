<!-- FaultHandlingSample BPEL Process [Generated by the Eclipse BPEL Designer] -->
<bpel:process name="FaultHandlingSample"
         targetNamespace="http://wso2.org/wso2con/2011/sample/faulthandling"
         suppressJoinFailure="yes"
         xmlns:tns="http://wso2.org/wso2con/2011/sample/faulthandling"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:ns="http://wso2.org/wso2con/2011/sample/adder" xmlns:ns0="http://wso2.org/wso2con/2011/sample/division">

    <!-- Import the client WSDL -->
    <bpel:import namespace="http://wso2.org/wso2con/2011/sample/division" location="DivisionProcessArtifacts.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import namespace="http://wso2.org/wso2con/2011/sample/adder" location="AdderProcessArtifacts.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import location="FaultHandlingSampleArtifacts.wsdl" namespace="http://wso2.org/wso2con/2011/sample/faulthandling" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:FaultHandlingSample"
                     myRole="FaultHandlingSampleProvider"
                     />
        <bpel:partnerLink name="AdderPL" partnerLinkType="tns:AdderPLT" partnerRole="adderRole"></bpel:partnerLink>
        <bpel:partnerLink name="DivisionPL" partnerLinkType="tns:DivisionPLT" partnerRole="dividerRole"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:FaultHandlingSampleRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:FaultHandlingSampleResponseMessage"/>
        <bpel:variable name="code" type="xsd:string"></bpel:variable>
        <bpel:variable name="cause" type="xsd:string"></bpel:variable>
        <bpel:variable name="fault" messageType="tns:processFault"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:faultHandlers>
        <bpel:catch><bpel:sequence>
                <bpel:assign validate="no" name="InitFault">
                    <bpel:copy>
                        <bpel:from>
                            <bpel:literal xml:space="preserve"><tns:processFault xmlns:tns="http://wso2.org/wso2con/2011/sample/faulthandling" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:code></tns:code>
  <tns:cause></tns:cause>
</tns:processFault>
</bpel:literal>
                        </bpel:from>
                        <bpel:to variable="fault" part="payload"></bpel:to>
                    </bpel:copy>
                    
                    <bpel:copy>
                        <bpel:from variable="code"></bpel:from>
                        <bpel:to part="payload" variable="fault">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:code]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from variable="cause"></bpel:from>
                        <bpel:to part="payload" variable="fault">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:cause]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:reply name="ReplyWithFault" partnerLink="client" operation="process" portType="tns:FaultHandlingSample" faultName="tns:fault" variable="fault"></bpel:reply>
            </bpel:sequence></bpel:catch>
    </bpel:faultHandlers>
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in FaultHandlingSample.wsdl 
             -->
        <bpel:assign validate="no" name="InitFaultCodes">
            <bpel:copy>
                <bpel:from>
                    <bpel:literal xml:space="preserve">-1</bpel:literal>
                </bpel:from>
                <bpel:to variable="code"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from>
                    <bpel:literal xml:space="preserve">Error occured while calculating (a + b) / c </bpel:literal>
                </bpel:from>
                <bpel:to variable="cause"></bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:FaultHandlingSample"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        
        <bpel:scope name="Scope">
            <bpel:sequence>
                <bpel:assign validate="no" name="InitAdderRequest">
                    <bpel:copy>
                        <bpel:from>
                            <bpel:literal xml:space="preserve"><tns:AdderProcessRequest xmlns:tns="http://wso2.org/wso2con/2011/sample/adder" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:a></tns:a>
  <tns:b></tns:b>
</tns:AdderProcessRequest>
</bpel:literal>
                        </bpel:from>
                        <bpel:to variable="AdderPLRequest" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:a]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="AdderPLRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:a]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:b]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="AdderPLRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:b]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:invoke name="Invoke-Adder" partnerLink="AdderPL" operation="process" portType="ns:AdderProcess" inputVariable="AdderPLRequest" outputVariable="AdderPLResponse">
                
                <ext:failureHandling xmlns:ext="http://ode.apache.org/activityRecovery">
					<ext:faultOnFailure>true</ext:faultOnFailure>
					<ext:retryFor>0</ext:retryFor>
					<ext:retryDelay>0</ext:retryDelay>
				</ext:failureHandling>  
                
                </bpel:invoke>
                <bpel:assign validate="no" name="InitDivisionRequest">
                    <bpel:copy>
                        <bpel:from>
                            <bpel:literal xml:space="preserve"><tns:DivisionProcessRequest xmlns:tns="http://wso2.org/wso2con/2011/sample/division" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:dividend></tns:dividend>
  <tns:divisor></tns:divisor>
</tns:DivisionProcessRequest>
</bpel:literal>
                        </bpel:from>
                        <bpel:to variable="DivisionPLRequest" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="AdderPLResponse">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:result]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="DivisionPLRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:dividend]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:c]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="DivisionPLRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:divisor]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:invoke name="Invoke-Division" partnerLink="DivisionPL" operation="process" portType="ns0:DivisionProcess" inputVariable="DivisionPLRequest" outputVariable="DivisionPLResponse">
                
                <ext:failureHandling xmlns:ext="http://ode.apache.org/activityRecovery">
					<ext:faultOnFailure>true</ext:faultOnFailure>
					<ext:retryFor>0</ext:retryFor>
					<ext:retryDelay>0</ext:retryDelay>
				</ext:failureHandling>  
                
                <bpel:catch faultName="ns0:fault" faultVariable="faultVar" faultMessageType="ns0:processFault"><bpel:sequence>
                            <bpel:rethrow></bpel:rethrow>
                            <!--bpel:assign validate="no" name="UpdateErrorCodes">
                                <bpel:copy>
                                    <bpel:from part="payload" variable="fault">
                                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                            <![CDATA[tns:code]]>
                                        </bpel:query>
                                    </bpel:from>
                                    <bpel:to variable="code"></bpel:to>
                                </bpel:copy>
                                <bpel:copy>
                                    <bpel:from part="payload" variable="fault">
                                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:cause]]></bpel:query>
                                    </bpel:from>
                                    <bpel:to variable="cause"></bpel:to>
                                </bpel:copy>
                            </bpel:assign-->
                        </bpel:sequence></bpel:catch></bpel:invoke>
                <bpel:assign validate="no" name="InitResponse">
                    <bpel:copy>
                        <bpel:from>
                            <bpel:literal xml:space="preserve"><tns:FaultHandlingSampleResponse xmlns:tns="http://wso2.org/wso2con/2011/sample/faulthandling" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result></tns:result>
</tns:FaultHandlingSampleResponse>
</bpel:literal>
                        </bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="DivisionPLResponse">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:result]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="output">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:reply name="replyOutput" partnerLink="client" portType="tns:FaultHandlingSample" operation="process" variable="output" />
            </bpel:sequence>
            <bpel:faultHandlers>
                <bpel:catch faultName="ns0:fault" faultVariable="faultVar" faultMessageType="ns0:processFault"><bpel:sequence>
                       
                        <bpel:assign validate="no" name="UpdateErrorCodes">
                            <bpel:copy>
                                <bpel:from part="parameters" variable="faultVar">
                                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:DivideByZero]]></bpel:query>
                                </bpel:from>
                                <bpel:to variable="cause"></bpel:to>
                            </bpel:copy>
                        </bpel:assign>
                        <bpel:rethrow></bpel:rethrow></bpel:sequence></bpel:catch>
                <bpel:catch>
                    
                    <bpel:sequence>
                        
                        <bpel:assign validate="no" name="InitErrorCodes"><bpel:copy>
                                <bpel:from>
                                    <![CDATA[-2]]>
                                </bpel:from>
                                <bpel:to variable="code"></bpel:to>
                            </bpel:copy>
                            <bpel:copy>
                                <bpel:from>
                                    <bpel:literal xml:space="preserve">Standard SOAP fault returned while invoking services</bpel:literal>
                                </bpel:from>
                                <bpel:to variable="cause"></bpel:to>
                            </bpel:copy>
                        
                        </bpel:assign>
                        <bpel:rethrow></bpel:rethrow>
                    </bpel:sequence>
                </bpel:catch>
            </bpel:faultHandlers>
            <bpel:variables>
                <bpel:variable name="AdderPLResponse" messageType="ns:AdderProcessResponseMessage"></bpel:variable>
                <bpel:variable name="AdderPLRequest" messageType="ns:AdderProcessRequestMessage"></bpel:variable>
                <bpel:variable name="DivisionPLResponse" messageType="ns0:DivisionProcessResponseMessage"></bpel:variable>
                <bpel:variable name="DivisionPLRequest" messageType="ns0:DivisionProcessRequestMessage"></bpel:variable>
            </bpel:variables>
        </bpel:scope>
        
    </bpel:sequence>
</bpel:process>

