<!-- DivisionProcess BPEL Process [Generated by the Eclipse BPEL Designer] -->
<bpel:process name="DivisionProcess"
         targetNamespace="http://wso2.org/wso2con/2011/sample/division"
         suppressJoinFailure="yes"
         xmlns:tns="http://wso2.org/wso2con/2011/sample/division"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="DivisionProcessArtifacts.wsdl" namespace="http://wso2.org/wso2con/2011/sample/division" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:DivisionProcess"
                     myRole="DivisionProcessProvider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:DivisionProcessRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:DivisionProcessResponseMessage"/>
        <bpel:variable name="fault" messageType="tns:processFault"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in DivisionProcess.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:DivisionProcess"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:scope name="Scope">
            <bpel:sequence>
                <bpel:if name="If-DivisorIsZero">
                    <bpel:condition><![CDATA[$input.payload/tns:divisor = 0]]></bpel:condition>
                    <bpel:throw name="ThrowDivideByZero" faultName="tns:DivideByZeroDefault"></bpel:throw>
                </bpel:if>
                <bpel:assign validate="no" name="InitResponse">
                    <bpel:copy>
                        <bpel:from>
                            <bpel:literal xml:space="preserve"><tns:DivisionProcessResponse xmlns:tns="http://wso2.org/wso2con/2011/sample/division" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result></tns:result>
</tns:DivisionProcessResponse>
</bpel:literal>
                        </bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from>
                            <![CDATA[$input.payload/tns:dividend div $input.payload/tns:divisor]]>
                        </bpel:from>
                        <bpel:to part="payload" variable="output">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:reply name="replyOutput" partnerLink="client" portType="tns:DivisionProcess" operation="process" variable="output" />
            </bpel:sequence>
            <bpel:faultHandlers>
                <bpel:catch faultName="tns:DivideByZeroDefault"><bpel:sequence>
                        <bpel:assign validate="no" name="Assign">
                            <bpel:copy>
                                <bpel:from>
                                    <bpel:literal xml:space="preserve"><tns:processFault xmlns:tns="http://wso2.org/wso2con/2011/sample/division" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:DivideByZero></tns:DivideByZero>
</tns:processFault>
</bpel:literal>
                                </bpel:from>
                                <bpel:to part="parameters" variable="fault"></bpel:to>
                            </bpel:copy>
                            
                            
                            <bpel:copy>
                                <bpel:from>
                                    <bpel:literal xml:space="preserve">Divide by zero!!!</bpel:literal>
                                </bpel:from>
                                <bpel:to part="parameters" variable="fault">
                                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:DivideByZero]]></bpel:query>
                                </bpel:to>
                            </bpel:copy>
                        </bpel:assign>
                        <bpel:reply name="Reply" partnerLink="client" operation="process" portType="tns:DivisionProcess" faultName="tns:fault" variable="fault"></bpel:reply>
                    </bpel:sequence></bpel:catch>
            </bpel:faultHandlers>
        </bpel:scope>
        
    </bpel:sequence>
</bpel:process>

