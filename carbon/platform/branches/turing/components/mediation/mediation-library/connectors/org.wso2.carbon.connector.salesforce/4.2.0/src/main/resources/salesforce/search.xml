<?xml version="1.0" encoding="UTF-8"?>
<template name="search" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="searchString"/>
    <sequence>
        <property
            expression="get-property('operation','salesforce.serviceUrl')" name="uri.var.salesforce.url"/>
        <payloadFactory>
            <format>
                <soapenv:Envelope
                    xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:urn="urn:partner.soap.sforce.com">
                    <soapenv:Header>
                        <urn:SessionHeader>
                            <urn:sessionId>$1</urn:sessionId>
                        </urn:SessionHeader>
                    </soapenv:Header>
                    <soapenv:Body>
                        <urn:search>
                            <urn:searchString>$2</urn:searchString>
                        </urn:search>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg expression="get-property('operation','salesforce.sessionId')"/>
                <arg expression="$func:searchString"/>
            </args>
        </payloadFactory>
        <property name="SOAPAction" scope="transport" value="urn:partner.soap.sforce.com/Soap/searchRequest"/>
        <call>
            <endpoint>
                <http method="POST" uri-template="{uri.var.salesforce.url}"/>
            </endpoint>
        </call>
    </sequence>
</template>
