<!-- Splitter eip library function template shipped with the Apache Synapse -->
<template xmlns="http://ws.apache.org/ns/synapse" name="getClosestTrends">
	<parameter name="latitude" />
	<parameter name="longitude" />
	<sequence>
		<property name="Authorization"
			expression="fn:concat('bearer ', get-property('operation','twitter.accessToken'))"
			scope="transport" />
		<property name="uri.var.twitter.lat" expression="$func:latitude" />
		<property name="uri.var.twitter.long" expression="$func:longitude" />

		<property name="messageType" value="application/x-www-form-urlencoded"
			scope="axis2" />

		<payloadFactory media-type="xml">
			<format>
				<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
					<soapenv:Header />
					<soapenv:Body />
				</soapenv:Envelope>
			</format>
			<args />
		</payloadFactory>

		<call>
			<endpoint>
				<http method="GET"
					uri-template="https://api.twitter.com/1.1/trends/closest.json?lat={uri.var.twitter.lat}&amp;long={uri.var.twitter.long}" />
			</endpoint>
		</call>
	</sequence>
</template>