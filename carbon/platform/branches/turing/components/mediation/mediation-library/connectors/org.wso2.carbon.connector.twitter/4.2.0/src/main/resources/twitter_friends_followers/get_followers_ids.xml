<!-- Splitter eip library function template shipped with the Apache Synapse -->
<template xmlns="http://ws.apache.org/ns/synapse" name="getFollowersIds">
	<parameter name="userId" />
	<parameter name="cursor" />
	<sequence>

		<property name="uri.var.twitter.userId" expression="$func:userId" />

		<property name="uri.var.twitter.cursor" expression="$func:cursor" />

		<filter
			xpath="get-property('uri.var.twitter.cursor') = '' or  (not(string(get-property('uri.var.twitter.cursor'))))">
			<then>
				<property name="uri.var.twitter.cursor" value="-1" />
			</then>
		</filter>

		<property name="Authorization"
			expression="fn:concat('bearer ', get-property('operation','twitter.accessToken'))"
			scope="transport" />
		<property name="messageType" value="application/x-www-form-urlencoded"
			scope="axis2" />

		<payloadFactory media-type="xml">
			<format>
				<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
					<soapenv:Header />
					<soapenv:Body />
				</soapenv:Envelope>
			</format>
			<args />
		</payloadFactory>

		<call>
			<endpoint>
				<http method="GET"
					uri-template="https://api.twitter.com/1.1/followers/ids.json?screen_name={uri.var.twitter.userId}&amp;cursor={uri.var.twitter.cursor}&amp;count=5000" />
			</endpoint>
		</call>


	</sequence>
</template>