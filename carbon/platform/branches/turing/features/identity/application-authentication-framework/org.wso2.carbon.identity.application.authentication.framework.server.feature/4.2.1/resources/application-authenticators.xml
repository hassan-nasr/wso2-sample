<Authenticators>
	<!--
		Enable BasicAuthenticator if the user authentication is done via
		username and password.
	-->
	<Authenticator name="BasicAuthenticator" disabled="false" factor="1">
		<Status value="10" loginPage="/authenticationendpoint/login.do" />
	</Authenticator>
	
	<!--
		Enable SAMLSSOAuthenticator if the user authentication is done via 
		an external SAMLSSO IdP.
	-->
	<Authenticator name="SAMLSSOAuthenticator" disabled="true" factor="1">
        <Status value="10" loginPage="https://localhost:9443/samlsso" />
        <Config>
            <Parameter name="ServiceProviderID">carbonServerApp</Parameter>
            <Parameter name="IdPCertAlias">wso2carbon</Parameter>
            <Parameter name="EnableRequestSigning">true</Parameter>
            <Parameter name="EnableResponseSignatureValidation">true</Parameter>
            <Parameter name="EnableAssertionSignatureValidation">true</Parameter>
            <Parameter name="CredentialImplClass">org.wso2.carbon.identity.application.authenticator.samlsso.manager.SSOAgentKeyStoreCredential</Parameter>
        </Config>
    </Authenticator>
</Authenticators>
	
